<script>
  document.addEventListener('DOMContentLoaded', function() {
    var initParameters = {
      shopPermanentDomain: '{{ shop.permanent_domain }}',
      productId: '{{ product.id }}'
    };
    window['theme-app-extension-example'].init(initParameters);
  });
</script>

{% schema %}
{
  "name": "Example App Block",
  "templates": [
    "index", "product"
  ],
  "target": "section",
  "javascript": "main.js",
  "settings": [
    {
      "id": "product",
      "type": "product",
      "label": "Product",
      "autofill": true
    }
  ]
}
{% endschema %}
